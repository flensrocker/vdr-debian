   bool ShowProgress(bool Initial);
-  void MarkToggle(void);
-  void MarkJump(bool Forward);
-  void MarkMove(bool Forward);
   void EditCut(void);
   void EditTest(void);
 public:
@@ -284,6 +280,10 @@
   virtual void Show(void);
   virtual void Hide(void);
   bool Visible(void) { return visible; }
+  void MarkToggle(void);
+  void MarkJump(bool Forward);
+  void MarkMove(bool Forward);
